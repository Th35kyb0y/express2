<!-- main start here-->
<main id="main">
    <section class="inner-page p-0 sec_body">
        <div class="container-fluid ">
            <div class="row">
                <div class="col-12 middle">
                    <!--sidebarTop start here-->
                    <app-sidebar></app-sidebar>
                    <!--sidebarTop end here-->
                    <!-- ======= Breadcrumbs ======= -->
                    <section class="breadcrumbs bredcrumb_top">
                        <div class="container-fluid ">
                            <div class="d-flex justify-content-between align-items-center">
                                <ol class="breadcrumb  card_partd">
                                    <li class="breadcrumb-item active"><a href="order">My Account</a></li>
                                    <li class="breadcrumb-item"> <a routerLink="/change-password"
                                            routerLinkActive="active" style="color: #c6000c">Change Password</a></li>
                                </ol>
                            </div>
                        </div>
                    </section>



                    <section class="section about-section gray-bg" id="about">

                        <div class="container">
                            <div class="row align-items-center ">
                                <div class="col-lg-6">

                                    <!-- change-password.component.html -->
                                    <form [formGroup]="changePasswordForm" (ngSubmit)="onSubmit()">
                                        <div class="mb-3">
                                          <label for="currentPassword" class="form-label">Current Password:</label>
                                          <input type="password" class="form-control" id="currentPassword" 
                                          formControlName="currentPassword" 
                                          [ngClass]="{ 'is-invalid': submitted && f['currentPassword'].errors }"
                                          />
        
                                         
                                          <div *ngIf="submitted && f['currentPassword'].errors"  class="form-text text-danger">
                                            <ng-container *ngIf="f['currentPassword'].errors['required']">
                                                Current Password is required.
                                            </ng-container>
                                           
                                          </div>
                                        </div>
                                      
                                        <div class="mb-3">
                                          <label for="newPassword" class="form-label">New Password:</label>
                                          <input type="password" class="form-control" id="newPassword" 
                                          [ngClass]="{ 'is-invalid': submitted && f['newPassword'].errors }"
                                          formControlName="newPassword" />
        
                                          <div *ngIf="submitted && f['newPassword'].errors" class="form-text text-danger">
                                            <div *ngIf="f['newPassword'].errors['required']">New Password is required.</div>
                                            <div *ngIf="f['newPassword'].errors['minlength']">
                                                New Password must be at least 6 characters long.
                                            </div>
                                            <div *ngIf="f['newPassword'].errors['maxlength']">
                                                New Password must not exceed 40 characters
                                            </div>
                                          </div>
        
                                        </div>
                                      
                                        <div class="mb-3">
                                          <label for="confirmPassword" class="form-label">Confirm Password:</label>
                                          <input type="password" class="form-control" 
                                          [ngClass]="{ 'is-invalid': submitted && f['confirmPassword'].errors }"
                                          id="confirmPassword" formControlName="confirmPassword" />
        
                                          <div
                                            *ngIf="submitted && f['confirmPassword'].errors"
                                            class="form-text text-danger"
                                        >
                                            <div *ngIf="f['confirmPassword'].errors['required']">
                                            Confirm Password is required
                                            </div>
                                            <div *ngIf="f['confirmPassword'].errors['matching']">
                                            Confirm Password does not match
                                            </div>
                                        </div>
        
                                        </div>
                                      
                                        <button type="submit" class="btn btn-danger w-100">Change Password</button>
                                        
                                      </form>


                                </div>
                                <div class="col-lg-6">

                                </div>
                            </div>

                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>

</main>
<!-- End #main -->