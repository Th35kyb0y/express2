<div class="container-fluid"  >
  <div class="d-flex justify-content-between align-items-center bg_danger">
    <div class="mr-3">
      <img src="/assets/images/logo_white.png" alt="Logo" />
    </div>

    <div class="d-flex gap-4">
      <div class="bell_icon"><i class="fas fa-bell"></i></div>

      <div class="username-container" (mouseover)="showLogout = true" (mouseleave)="hideDropdown()" (click)="toggleDropdown()">
        <div style="color: white; font-weight: 700">
          <h5>Welcome: {{ username }}</h5>
          <ul class="list-group list_item" [class.show]="showLogout">
            <li class="list-group-item" style="background-color: #c6000c; color:#ffffff; text-align: center;" (click)="logout()">Logout</li>

          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
