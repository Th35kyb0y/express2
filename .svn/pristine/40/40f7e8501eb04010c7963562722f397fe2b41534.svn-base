  }
  
  .horizontal-scroll .card {
    min-width: calc(100% / 3 - 1rem); /* Adjust the width as per your requirement */
    margin-right: 1rem; /* Add some space between cards */
  }
  
  .horizontal-scroll::-webkit-scrollbar {
    height: 8px; /* Customize the scrollbar height */
  }
  
  .horizontal-scroll::-webkit-scrollbar-thumb {
    background-color: #888; /* Customize the scrollbar thumb color */
    border-radius: 4px; /* Customize the scrollbar thumb border radius */
  }
  
  .horizontal-scroll::-webkit-scrollbar-thumb:hover {
    background-color: #555; /* Customize the scrollbar thumb hover color */
  }




