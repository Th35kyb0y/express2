<div class="row">

    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mt-2" *ngFor="let video of ProductVideos; let i = index">
        <div class="p-3 border bg-light">

            <h5 >
                <a href="javascript:void(0);" [title]="video.collectionName">{{video.collectionName}}</a>
            </h5>
            
                <video #videoPlayer controls (play)="onPlay(videoPlayer, i)" class="w-100" height="200" >
                    <source [src]="video.link" type="video/mp4">
                    Your browser does not support the video tag.
                  </video>
           
            <p class="video_name">
                {{video.name}} - {{video.code}}
            </p>
        </div>
      </div>

</div>
