/* sidebar */


@media screen and (max-width: 600px) {

.modal-content {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100% !important;
    left: 0px !important;
    pointer-events: auto;
    background-color: #fff;
    background-clip: padding-box;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 0.3rem;
    outline: 0;
}


}