<div class="container mb-5 " style=" margin-top: 134px;">
    <div class="row mt-1">
        <!-- <div class="col-lg-8 mb-0">
         <button type="button" class="btn btn-outline-primary btn-sm border-0 fs-6    ">Continue Shopping</button>
     
         <hr class="mt-1">
        
         
     </div> -->

    </div>


    <div class="row mt-2 mb-0">
        <div class="col-8 mb-0">
            <div class="d-flex justify-content-between">
                <a routerLink="/" class="btn btn-outline-primary btn-sm border-0 fs-6">Continue Shopping</a>
                <h6>Price</h6>
            </div>
            <hr class="mt-1">
            <ng-container *ngFor="let item of cart;let i=index">
                <div class="row">
                    <div class="col-lg-3 text-start" routerLink="/product-detail/{{item.name | catname}}">
                        <img src="{{item.imagePath}}" alt="image loading" height="120px" width="120px">

                    </div>
                    <div class="col-lg-7">
                        <h6 class="text-start fs-7">
                            {{item.name}} ({{item.code}})
                        </h6>

                        <div class="d-flex  align-items-center gap-3 mb-0">
                            <h6 class="text-secondary mb-0">
                                <span class="text-decoration-line-through"><i
                                        class="fas fa-rupee-sign"></i>{{item.price}}</span>
                            </h6>


                            <h6 class="text-danger mb-0">
                               ₹  {{item.price}}
                            </h6>
                            <h6 class=" mb-0 discount-price">
                               ₹  {{item.price}}(20%)
                            </h6>
                            <!-- <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label" for="flexCheckDefault">
                                    Add Installation
                                </label>
                            </div> -->
                        </div>

                        <div class="d-flex align-items-center mb-0">
                            <div class="btn-group btn-group-sm text-center align-items-center border border-danger">
                                <button type="button" class="btn" (click)="dec(i)">-</button>
                                <button type="button" class="btn">{{item.qty}}</button>
                                <button type="button" class="btn" (click)="inc(i)">+</button>
                            </div>

                            <div class="vr mx-3"></div>
                            <a href="javascript:void(0)" (click)="removeFromCat(i)"
                                class="text-decoration-none text-danger">
                                <p class="mt-3">Delete</p>
                            </a>

                            <div class="vr mx-3"></div>
                            <!-- <a href="" class="text-decoration-none">
                                <p class="mt-3 text-success">200 in Stock</p>
                            </a> -->
                        </div>
                    </div>

                    <div class="col-lg-2">
                        <h6 class="text-end">₹  {{item.price * item.qty}}</h6>

                    </div>

                </div>
                <hr class="mt-0">
            </ng-container>

            <ng-container *ngIf="shipAdd">
                <div class="d-flex justify-content-between mb-0">
                    <p class="fs-6 fw-bold">Delivery Address</p>
                    <a routerLink="/user/shipping-address" class="text-primary">Change</a>
                </div>
                <div class="card p-2">
                    <div class="form-check mb-0">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1"
                            checked>
                        <label class="form-check-label" for="flexRadioDefault1">
                            <p class="fs-6 mb-0"> {{shipAdd?.firstName}} {{shipAdd?.lastName}}</p>
                            <p> {{shipAdd?.companyName}} {{shipAdd?.line1}} {{shipAdd?.line2}} {{shipAdd?.city}}
                                {{shipAdd?.state}} <span class="text-decoration-underline m-lg-5  "><a href=""
                                        class="text-primary">Add Delivery
                                        Instruction {{shipAdd?.deliveryInstruction}}</a></span></p>
                        </label>
                    </div>



                </div>
            </ng-container>
            <div>
                <a routerLink="/user/checkout" class="text-decoration-underline text-danger">Review Order</a>

            </div>
        </div>


        <div class="col-lg-4 col-md-6 col-12 mb-5 mt-0 m-lg-0">
            <div class="card ">
                <div class="card-body mt-0">
                    <h6 class="card-title mt-0">Order Summary</h6>
                    <hr class="mt-0">

                    <div class="d-flex justify-content-between mb-1">
                        <p class="mb-0">Order Number:</p>
                        <p class="mb-0">ROR985475</p>
                    </div>

                    <div class="d-flex justify-content-between mb-1">
                        <p class="mb-0">Base Value:</p>
                        <p class="mb-0">₹   {{getTotalAmount()}}</p>
                    </div>

                    <div class="d-flex justify-content-between mb-1">
                        <p class="mb-0">Discount Value:</p>
                        <p class="mb-0">₹   {{discountPrices.toFixed(2)}}</p>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <p class="mb-0">Net Value:</p>
                        <p class="mb-0">₹   00.00</p>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <p class="mb-0">Delivery Charge:</p>
                        <p class="mb-0">₹   00.00</p>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <p class="mb-0">Intallation Charge:</p>
                        <p class="mb-0">₹   00.00</p>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <p class="mb-0">Design Charge:</p>
                        <p class="mb-0">₹   00.00</p>
                    </div>
                    <div class="d-flex justify-content-between mb-1">
                        <p class="mb-0">Taxable Value:</p>
                        <p class="mb-0">₹   00.00</p>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <p class="mb-0">GST(20%)</p>
                        <p class="mb-0">₹   00.00</p>
                    </div>

                    <div class="d-flex justify-content-between mb-0">
                        <p class="fs-5 fw-bold mb-0">Total Payable:</p>
                        <p class=" fs-5 fw-bold">₹   {{getPayTotalAmount()}}</p>
                    </div>

                    <!-- Add more details as needed -->

                </div>
            </div>
            <div class="d-flex justify-content-end mt-0">
                <button class="btn btn-danger w-100 m-lg-2 ">Pay Now</button>
            </div>


        </div>
    </div>
</div>