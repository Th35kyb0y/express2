    <div class="row">
        <div class="col-12" style="overflow:auto;max-height:300px">
          <p *ngIf="List1.length==0" class="text-center mt-3">
            <span *ngIf="!IsShowLoader">Record not found</span>
            <span class="loader" *ngIf="IsShowLoader"></span>
          </p>
            <table class="table">
                <thead>
                    <tr>
                      <ng-container  *ngFor="let header of columns1 ">
                        <th *ngIf="header!='recording_file'">{{header}}</th>
                        <th *ngIf="header=='recording_file'">Call Recording</th>
                      </ng-container>
                      
                    </tr>

                </thead>
                <tbody>
                    <tr *ngFor="let row of List1;let i=index;">
                      <ng-container  *ngFor="let cell of columns1 ">
                        <td *ngIf="cell!='recording_file'">
                          {{ row[cell] }}
                        </td>
                        <td *ngIf="cell=='recording_file'">
                          <a href="javascript:void(0)" (click)="goToLink(row[cell]) " >
							<i class="fa fa-play" aria-hidden="true"></i>
                          </a>
                        </td>
                        </ng-container>
                        

                    </tr>


                </tbody>
            </table>
        </div>
    </div> 

   
</div>