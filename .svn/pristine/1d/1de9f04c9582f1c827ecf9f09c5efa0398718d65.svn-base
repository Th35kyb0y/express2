<!-- main start here-->
<main id="main">
    <section class="inner-page p-0 mobile_mtop " >
      <div class="container">
        <div class="row mt-4">
          <div class="col-12 middle">
            <!--sidebarTop start here-->
            <!-- <div class="col-2 f_left side_bar">
                            <app-top-sidebar></app-top-sidebar>
                        </div> -->
          </div>
          <!--sidebarTop end here-->
  
          <div class="container mt-0">
            <div class="d-flex justify-content-between mt-0">
              <div class="col-8 px-3 red_s py-2">
                <p class="">Shipping Address</p>
              </div>
              <div>
                <p class="fs-6 fw-bold">
                  <span style="margin-left: 10px;"><button class="btn btn-outline-danger ml-2" data-bs-toggle="modal"
                      (click)="addAddress('Add',null)">+Add New Address</button></span>
                </p>
                
  
              </div>
  
            </div>
            <!-- <hr class="mb-0" style="margin-top: -15px;">
            <div class="form-check mt-1">
              <input class="form-check-input" type="radio" value="" id="flexCheckDefault">
              <label class="form-check-label" for="flexCheckDefault">
                <p class="fs-6">Shipping Address is same as Billing Address</p>
              </label>
            </div> -->
  
  
          </div>
          
          <div class="container">
  
            <div class="row d-flex">
              <div class="col-8">
                <div class="row">
                  <ng-container *ngFor="let item of addresses;let i=index">
                
                    <div class="col-12" (click)="item.IsEditInstruction=false">
                      <div class="card shadow-sm mb-2 bg-body rounded p-2">
                     
                          <div>
                            <p>{{item.addressType}}</p>
                          </div>
                        
      
                      
                      <div class="card-body p-2 " >
                        <div class="form-check radio_c">
                          
                          <input class="form-check-input" type="radio" name="flexRadioDefault-{{i+1}}" id="flexRadioDefault1-{{i+1}}"
                          [checked]="selShipAdd(item)"
                          (click)="saveShipAdd(item);$event.stopPropagation();">
                          <label class="form-check-label" for="flexRadioDefault1-{{i+1}}">
                            <!-- <p style="font-size: medium;">Set as Default</p> -->
                          </label>
                        </div>
                        <p class="mb-0">{{item.firstName}} {{item.lastName}} {{item.mobile}} </p>
                          <p class="mb-0">
                            {{item.companyName}} {{item.line1}} {{item.line2}} {{item.city}} {{item.state}}
                          </p>
                          <!-- <p class="mb-0">Phone number: {{item.mobile}}</p> -->
                          <p class="mb-0 mx-4">Email: {{item.email}}</p>
                          <p class="mb-0 text-primary mx-4" *ngIf="!item.IsEditInstruction"> <a (click)="item.IsEditInstruction=true;$event.stopPropagation();">  Delivery Instruction: {{item.deliveryInstruction}}</a></p>
                          <div class="input-group mb-3" *ngIf="item.IsEditInstruction" (click)="item.IsEditInstruction=true;$event.stopPropagation();">
                            <input type="text" class="form-control" 
                            [(ngModel)]="item.deliveryInstruction" (ngModelChange)="onInputChange(item)" name="deliveryInstruction" id="deliveryInstruction" placeholder="Delivery Instruction" aria-label="Delivery Instruction" aria-describedby="button-addon2">
                            <button class="btn btn-outline-secondary" type="button" 
                            (click)="item.IsEditInstruction=false;$event.stopPropagation();" id="button-addon2">Save</button>
                          </div>
      
      
                        </div> 
                        <div class="d-flex justify-content-start gap-2 mx-4" style="height: 40px;">
                          <div class="form-check">
                            <label class="form-check-label" for="setAsDefault">
                              <p class="fs-6" style="margin-right: 5px;"> Set Default</p>
                            </label>
                            <input class="form-check-input" type="radio" name="setAsDefault-{{i+1}}" id="setAsDefault-{{i+1}}"
                              [checked]="item.isDefault?true:false" (change)="setDetault(item,$event)" 
                              (click)="$event.stopPropagation();">
      
                          </div>
                          <div class="vr  border border-dark "
                          style="height: 15px; margin-top: 5px; margin-left: 10px; margin-right: 10px; font-weight:bolder;">
    
                        </div>
    
                          <div>
                            <p style="cursor: pointer;"  (click)="addAddress('Edit',item)">
                              <i class="far fa-edit" style="color: grey;"></i> Edit
                            </p>
                          </div>
                 
               
      
                        </div>
                      </div>
      
                    </div>
                  
    
    
    
                  </ng-container>

                </div>
              </div>
              <div class="card col-4 px-0">
                <h5 class="card-header"><b>Details:</b></h5>
                <div class="card-body font_s18">
                  <div class="row _3LxTgx">

                    <div class="col-4 pull-left">Sub Total:</div>
                    <div class="col-8 pull-left text_right">₹{{cartService.cartTotal() | number:'1.2-2' }} ({{cartService.cartTotalItems()}} Items)</div>
                   </div>
                  <h5 class="card-text">Discount :<span class="pull-right">₹    {{cartService.cartDiscount()}}</span></h5>
                 <!-- <div class="col-8 pull-left">Price (1 item)</div>
                 <div class="col-4 pull-left text_right">312</div> -->

               
                </div>
              </div>
             
             
  
            </div>
            <div class="d-flex justify-content-between mt-4">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" [(ngModel)]="isbillingAddressSame" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">
                  <p style="font-size: small;">Shipping Address is same as Billing Address</p>
                </label>
              </div>
              <button (click)="gotoBining()" class="btn btn-sm btn-outline-danger mb-3">Proceed to
                Billing
                Option</button>
              <!-- <button routerLink="/user/billing-address" class="btn btn-sm btn-danger" style="height: 30px;">Proceed to
                billing
                option</button> -->
  
            </div>
  
  
          </div>
  
          <!--  commoncode start here-->
          <div class="row">
            <!-- <app-product-recommended></app-product-recommended> -->
          </div>
          <!-- commoncode end here-->
        </div>
      </div>
    </section>
  </main>